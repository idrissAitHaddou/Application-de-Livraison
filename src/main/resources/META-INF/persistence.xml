<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="default">
        <class>com.example.livraisonsmypack.agency.Agencies</class>
        <class>com.example.livraisonsmypack.car.Cars</class>
        <class>com.example.livraisonsmypack.category.Categories</class>
        <class>com.example.livraisonsmypack.coli.Colis</class>
        <class>com.example.livraisonsmypack.command.Commands</class>
        <class>com.example.livraisonsmypack.command.Products_command</class>
        <class>com.example.livraisonsmypack.product.Products</class>
        <class>com.example.livraisonsmypack.product.Products_quantity</class>
        <class>com.example.livraisonsmypack.user.Admins</class>
        <class>com.example.livraisonsmypack.user.Drivers</class>
        <class>com.example.livraisonsmypack.user.Managers</class>
        <properties>
            <property name='hibernate.connection.driver_class' value="org.postgresql.Driver" />
            <property name='hibernate.connection.url' value="jdbc:postgresql://localhost:5434/livraison" />
            <property name='hibernate.connection.username' value="postgres" />
            <property name='hibernate.connection.password' value="admin" />
            <property name="show_sql" value="false"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
